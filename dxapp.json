{
  "name": "varscan2_v1.7",
  "title": "Varscan2_v1.7",
  "summary": "v1.7 - (Varscan 2 somatic variant caller for use on SWIFT NGS sequencing output)",
  "tags": [
    "Variants",
    "Cancer"
  ],
  "properties": {
    "github release": "v1.7"
  },
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "bam_file",
      "label": "Bam file",
      "help": "The aligned bam file",
      "class": "array:file",
      "patterns": ["*.bam"],
      "optional": false
    },
    {
      "name": "bed_file",
      "label": "Bed file",
      "help": "bed file used for variant filtering",
      "class": "file",
      "patterns": ["*.bed"],
      "optional": true
    },
    {
      "name": "ref_genome",
      "label": "reference genome",
      "help": "reference genome",
      "class": "file",
      "optional": false,
      "suggestions": [
        {
          "name": "hs37d5.fasta-index.tar.gz",
          "value": 
            {
              "$dnanexus_link": 
              {
                "project": "project-ByfFPz00jy1fk6PjpZ95F27J",
                "id": "file-ByYgX700b80gf4ZY1GxvF3Jv"
              }
            }
        }
      ]
    },
    {
     "name": "min_coverage",
     "label": "min-coverage",
     "help": "Minimum read depth at a position to make a call",
     "class": "string",
     "optional": false,
     "default": "10",      
     "group": "varscan"
    },   
    {
     "name": "min_reads2",
     "label": "min-reads2",
     "help": "Minimum supporting reads at a position to call variants",
     "class": "string",
     "optional": false,
     "default": "5",      
     "group": "varscan"
    },
    {
     "name": "min_var_freq",
     "label": "min-var-freq",
     "help": "Minimum variant allele frequency threshold",
     "class": "string",
     "optional": true,
     "default": "0.01",      
     "group": "varscan"
    },    
    {
     "name": "min_freq_for_hom",
     "label": "min-freq-for-hom",
     "help": "Minimum frequency to call homozygote",
     "class": "string",
     "optional": true,
     "default": "0.75",      
     "group": "varscan"
    },
    {
     "name": "p_value",
     "label": "Default p-value",
     "help": "Default p-value threshold for calling variants",
     "class": "string",
     "optional": true,
     "default": "0.05",      
     "group": "varscan"
    },
    {
     "name": "strand_filter",
     "label": "Strand Filter",
     "help": "Ignore variants with >90% support on one strand",
     "class": "boolean",
     "optional": false,
     "default": true,      
     "group": "varscan"
    },
    {
     "name": "output_vcf",
     "label": "output-vcf",
     "help": " outputs in VCF format if true",
     "class": "boolean",
     "optional": false,
     "default": true,      
     "group": "varscan"
    },
    {
     "name": "variants",
     "label": "variants",
     "help": " Report only variant (SNP/indel) positions (mpileup2cns only) [0]",
     "class": "boolean",
     "optional": false,
     "default": true,      
     "group": "varscan"
    },
    {
      "name": "min_MQ",
      "label": "samtools_mpileup_min_map_qual",
      "help": "Minimum mapping quality for an alignment to be used in mpileup (-q)",
      "class": "string",
      "optional": true, 
      "default": "20",
      "group": "samtools mpileup"
     },
     {
      "name": "min_BQ",
      "label": "Minimum base quality for mpileup and varscan",
      "help": "Minimum base quality for an base to be considered (mpileup -Q and varscan --min_avg_qual)",
      "class": "string",
      "optional": true,      
      "default": "15",
      "group": "Common"
     },
     {
      "name": "mpileup_extra_opts",
      "label": "samtools_mpileup_extra_opts",
      "help": "any extra options",
      "class": "string",
      "optional": true,      
      "group": "samtools mpileup"
     }
    ],
  "outputSpec": [
    {
      "name": "varscan_vcf",
      "label": "Output annotated VCF",
      "help": "Output annotated VCF.",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "flagstat",
      "label": "samtools flagstat output",
      "help": "samtools flagstat output which should indicate why the mpileup file may be empty.",
      "class": "array:file"
    },
    {
      "name": "varscan_vcf_bed",
      "label": "Output bedfiltered annotated VCF",
      "help": "Output bedfiltered annotated VCF.",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "mpileup_file",
      "label": "mpileup file",
      "help": "Output Samtools mpileup file used by varscan.",
      "class": "array:file"
    }
  ],
  "runSpec": {
    "execDepends": [
    {
      "name": "openjdk-8-jre-headless"
    }
    ],
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x8"
      }
    },
    "distribution" : "Ubuntu",
    "release" : "14.04",
    "file": "src/code.sh",
    "interpreter": "bash"
  }
}
